<%=provide(:title,"Thong tin lop hoc ")%>
<div class="row">
	<div class="col-md-4">
		Ma lop hoc <%=@lophoc.malophoc%><br>
		Thoi gian <%=toStrTime(@lophoc.thoigian)%><br>
		Dia diem <%=@lophoc.diadiem%><br>
		Giao vien giang day <%=@lophoc.giaovien.tengiaovien%><br>		
		Hoc phan <%=@lophoc.hocphan.tenhocphan%>-<%=@lophoc.hocphan.mahocphan%><br>
		Hoc ki <%=@lophoc.hocki.mahocki%><br>
		So luong dang ki <%=@lophoc.dangkilophocs.count%>/<%=@lophoc.maxdangki%><br>
		<%=link_to "Them dang ki lop hoc",new_dangkilophoc_path(:lophoc_id=>@lophoc.id)%><br>		
		<%=link_to " Edit ", edit_lophoc_path(@lophoc)%>
		<%= link_to ' Xóa ', @lophoc, method: :delete,
				                                     data: { confirm: 'Chắc chắn xóa ?' },class: "btn btn-danger glyphicon glyphicon-trash" %>
		
	</div>
	<div class="col-md-6">
		<%= will_paginate @dangkilophocs , :outer_window=>1,:inner_window=>1%>
		<table >
			<head>
				<tr>
					<td>Ma sinh vien</td>
					<td>Ten sinh vien</td>					
					<td>Ten lop sinh vien</td>			
				</tr>
			</head>
			<body>
				<%@dangkilophocs.each do |dk| %>				
				<tr>
					<td><%=dk.sinhvien.masinhvien%></td>
					<td><%=dk.sinhvien.tensinhvien%></td>					
					<td><%=dk.sinhvien.lopsinhvien.tenlopsinhvien%></td>
					<td><%=link_to 'Xoa', dk, method: :delete,
				                                     data: { confirm: 'Chắc chắn xóa ?' },class: "btn btn-danger glyphicon glyphicon-trash" %></td>		
				</tr>
				<% end %>
			</body>
		</table>
		<%= will_paginate @dangkilophocs , :outer_window=>1,:inner_window=>1%>
		<%= page_entries_info @dangkilophocs %>		  	
	</div>
</div>

