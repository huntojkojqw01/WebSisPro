<%=provide(:title,"Thông tin lớp học ")%>
<div class="row">
	<div class="col-md-4" style="background-color:#F6D8CE; font-size:15px;">
		<div class="container">
			<ul class="list-group">
				<li><b>Mã lớp học: </b><%=@lophoc.malophoc%></li>
				<li><b>Thời gian: </b><%=toStrTime(@lophoc.thoigian)%></li>
				<li><b>Địa điểm: </b><%=@lophoc.diadiem%></li>
				<li><b>Giáo viên giảng dạy: </b><%=@lophoc.giaovien.tengiaovien%></li>
				<li><b>Học phần: </b><%=@lophoc.hocphan.tenhocphan%>-<%=@lophoc.hocphan.mahocphan%></li>
				<li><b>Học kì: </b><%=@lophoc.hocki.mahocki%></li>
				<li><b>Số lượng đăng kí: </b><%=@lophoc.dangkilophocs.count%>/<%=@lophoc.maxdangki%></li>
			</ul>
		</div>
		
		<%= link_to " Sửa ", edit_lophoc_path(@lophoc)%><br>
		<%= link_to ' Xóa', @lophoc, method: :delete,
				                                     data: { confirm: 'Chắc chắn xóa ?' },class: "btn btn-danger glyphicon glyphicon-trash" %>

	</div>
	<div class="col-md-2">

	</div>
	<div class="col-md-6">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Mã sinh viên</th>
					<th>Tên sinh viên</th>
					<th>Tên lớp sinh viên</th>
				</tr>
			</thead>
			<body>
				<%@dangkilophocs.each do |dk| %>
				<tr>
					<td><%=dk.sinhvien.masinhvien%></td>
					<td><%=dk.sinhvien.tensinhvien%></td>
					<td><%=dk.sinhvien.lopsinhvien.tenlopsinhvien%></td>
					<td><%=link_to 'Xóa', dk, method: :delete,
				                                     data: { confirm: 'Chắc chắn xóa ?' },class: "btn btn-danger glyphicon glyphicon-trash" %></td>
				</tr>
				<% end %>
			</body>
		</table>
		<%= will_paginate @dangkilophocs , :outer_window=>1,:inner_window=>1,class:"pager"%>
		<%= page_entries_info @dangkilophocs %>
	</div>
</div>
