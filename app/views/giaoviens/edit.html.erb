<%=provide(:title,"Edit giao vien ")%>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Thay đổi thông tin giao vien </h1>
		<%= form_for(@giaovien) do |f| %>
		    <%= render 'shared/error_messages', object: f.object %>
		    <%= f.label :"Ma giao vien" %>
		    <%= f.text_field :magiaovien ,class: 'form-control', placeholder: "Nhập ma giao vien "%>
		    <%= f.label :"Tên giao vien" %>
		    <%= f.text_field :tengiaovien ,class: 'form-control', placeholder: "Nhập tên giao vien "%>
		    <%= f.label :"Ngay sinh" %>
		    <%= f.date_select :ngaysinh ,:start_year=>1900,:end_year=>2000%><br>    
		    <%= f.label :"Email" %>
		    <%= f.text_field :email ,class: 'form-control', placeholder: "Nhập email "%>
		    <%= f.label :"Khoa vien" %>
		    <%= f.collection_select :khoavien_id, Khoavien.all, :id, :tenkhoavien, prompt: true %>
		    <%= f.submit "Thay đổi ",class: "btn btn-primary"%>
		<% end %>
	</div>
</div>
