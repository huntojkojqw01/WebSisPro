<%=provide(:title,"学期リスト")%>
<div class="row" id="hocki_list">	
	<div class="col-md-6 col-md-offset-3">		
		<%=label_tag "Open 科目登録" %><br>
		<%=select_tag "hocki_id_hp", options_from_collection_for_select(@hockis, "id", "mahocki",@hocki_id_hp),:include_blank=>"Close all"%><br>
		<%=label_tag "Open クラス登録" %><br>
		<%=select_tag "hocki_id_lh", options_from_collection_for_select(@hockis, "id", "mahocki",@hocki_id_lh),:include_blank=>"Close all"%>		
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>学期コ➖ド</th>
					<th>単位学費</th>
					<th>始まる</th>
					<th>終わる</th>
				</tr>
			</thead>
			<tbody>
				<%= render @hockis %>
			</tbody>
		</table>
		<%= link_to '追加', new_hocki_path,class: "btn btn-lg btn-primary" %>
	</div>	
</div>
