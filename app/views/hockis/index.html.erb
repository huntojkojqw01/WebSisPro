<%=provide(:title,"Danh sách học kì ")%>
<div class="row" id="hocki_list">	
	<div class="col-md-6 col-md-offset-3">		
		<%=label_tag "Mở đăng kí học phần trong HK" %><br>
		<%=select_tag "hocki_id_hp", options_from_collection_for_select(@hockis, "id", "mahocki",@hocki_id_hp),:include_blank=>"Close all"%><br>
		<%=label_tag "Mở đăng kí lớp trong HK" %><br>
		<%=select_tag "hocki_id_lh", options_from_collection_for_select(@hockis, "id", "mahocki",@hocki_id_lh),:include_blank=>"Close all"%>		
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Mã học kì</th>
					<th>Định mức học phí</th>
					<th>Thời gian bắt đầu</th>
					<th>Thời gian kết thúc</th>
				</tr>
			</thead>
			<tbody>
				<%= render @hockis %>
			</tbody>
		</table>
		<%= link_to ' Thêm học kì mới ', new_hocki_path,class: "btn btn-lg btn-primary" %>
	</div>	
</div>
