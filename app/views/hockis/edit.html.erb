<%=provide(:title,"学期更新")%>
<div class="row">
	<div class="col-md-6 col-md-offset-3" style="background-color:#F2F5A9">
		<h1 style="text-align: center; font-size: 40px;">学期情報を更新</h1>
		<div class="form-horizontal" style="margin-top: 20px;">
			<%= form_for(@hocki) do |f| %>
			    <%= render 'shared/error_messages', object: f.object %>
					<div class="form-group">
						<%= f.label :"学期コ➖ド" ,class:"control-label col-sm-4"%>
						<div class="col-sm-8">
							<%= f.text_field :mahocki ,class: 'form-control', placeholder: "Nhập mã học kì "%>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :"始まる" ,class:"control-label col-sm-4"%>
						<div class="col-sm-8">
					    <%= f.date_select :bd %>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :"終わる" ,class:"control-label col-sm-4"%>
						<div class="col-sm-8">
					    <%= f.date_select :kt %>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :"単位学費" ,class:"control-label col-sm-4"%>
						<div class="col-sm-8">
					    <%= f.number_field :dinhmuchocphi ,class: 'form-control', placeholder: "Nhập mức học phí "%>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-4 col-sm-4">
							<%= f.submit "更新",class: "btn btn-primary"%>
						</div>
					</div>
			<% end %>
		</div>
	</div>
</div>
