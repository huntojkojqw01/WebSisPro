<%=provide(:title,"Thêm hoc phan ")%>
<div class="row">
	<div class="col-md-3">

	</div>
	<div class="col-md-6" style="background-color:#F2F5A9">
		<h1 style="text-align:center; margin-bottom: 40px;">Thêm học phần mới </h1>
		<div class="form-horizontal">
			<%= form_for(@hocphan) do |f| %>
			    <%= render 'shared/error_messages', object: f.object %>
					<div class="form-group">
						<%= f.label :"Mã học phần",class:"control-label col-sm-4"%>
						<div class="col-sm-8">
							<%= f.text_field :mahocphan ,class: 'form-control', placeholder: "Nhập ma hoc phan "%>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :"Tên học phần" ,class:"control-label col-sm-4"%>
						<div class="col-sm-8">
							<%= f.text_field :tenhocphan ,class: 'form-control', placeholder: "Nhập tên hoc phan "%>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :"Tín chỉ",class:"control-label col-sm-4"%>
						<div class="col-sm-8">
							<%= f.select :tinchi ,options_for_select((1..12).step(0.5))%>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :"Tin chi hoc phi",class:"control-label col-sm-4"%>
						<div class="col-sm-8">
							<%= f.select :tinchihocphi ,options_for_select((1.5..25).step(0.5))%>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :"Trong so",class:"control-label col-sm-4"%>
						<div class="col-sm-8">
							<%= f.select :trongso ,options_for_select((0.5..1).step(0.1))%>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :"Khoa vien",class:"control-label col-sm-4"%>
						<div class="col-sm-8">
							<%= f.collection_select :khoavien_id, Khoavien.order(:tenkhoavien), :id, :tenkhoavien, prompt: true %>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-4 col-sm-8">
							<%= f.submit "Thêm học phần",class: "btn btn-primary"%>
						</div>
					</div>
			<% end %>
		</div>
	</div>
	<div class="col-md-3">

	</div>
</div>
