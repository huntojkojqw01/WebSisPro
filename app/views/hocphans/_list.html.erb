<table class="table table-striped">
	<thead>
		<tr>
			<th>Ma hoc phan</th>
			<th>Ten hoc phan</th>
			<th style="text-align: center">Tin chi</th>
			<th style="text-align: center">Tin chi hoc phi</th>
			<th>Trong so</th>
			<th style="text-align: center">Trang thai mo dang ki</th>
			<th>Khoa vien</th>
		</tr>
	</thead>
	<body>
		<%object.each do |hp| %>

		<tr>
			<td><%=link_to hp.mahocphan,hp%></td>
			<td><%=hp.tenhocphan%></td>
			<td style="text-align:center"><%=hp.tinchi%></td>
			<td style="text-align:center"><%=hp.tinchihocphi%></td>
			<td><%=(1-hp.trongso).round(1)%>-<%=hp.trongso%></td>
			<td style="text-align:center"><%=hp.modangki ? "Open" : "Close" %></td>
			<td><%=hp.khoavien.tenkhoavien%></td>
		</tr>
		<% end %>
	</body>
</table>
<%= will_paginate object , :outer_window=>1,:inner_window=>1, class: "pager"%>
