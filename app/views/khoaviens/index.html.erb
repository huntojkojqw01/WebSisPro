<%=form_tag(khoaviens_path,method: "GET") do %>
		<%=text_field_tag :tenkhoavien,@selected[:tenkhoavien], placeholder: "Nhap ten khoa vien"%>
		<%=submit_tag "Tìm kiếm",class: "btn btn-info glyphicon glyphicon-search"%>
<%end%> 
<table >
	<head>
		<tr>
			<td>Ten khoa</td>
			<td>Dia diem</td>
			<td>So dien thoai</td>						
		</tr>
	</head>
	<body>
		<%@khoaviens.each do |kv| %>
		<tr>
			<td><%=link_to kv.tenkhoavien, kv %></td>
			<td><%=kv.diadiem%></td>
			<td><%=kv.sodienthoai%></td>						
		</tr>
		<% end %>
	</body>
</table>