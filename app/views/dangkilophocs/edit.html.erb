<%=provide(:title,"点更新")%>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>学生：<br>
		<%=@dangkilophoc.masinhvien%>-クラス： <%=@dangkilophoc.malophoc%></h1>
		<%= form_for(@dangkilophoc) do |f| %>
		    <%= render 'shared/error_messages', object: f.object %>	    		   		    
		    <%= f.label :"中間点" %>
		    <%= f.number_field :diemquatrinh,class: "form-control",:step => 0.1 %>
		    <%= f.label :"期末点" %>
		    <%= f.number_field :diemthi ,class: "form-control",:step => 0.1 %>		    
		    <%= f.submit "更新",class: "btn btn-primary"%>
		<% end %>
	</div>		
</div>
