<%=pどFrovide(:title,"クラス登録")%>
<div class="row" id="dklh_search">
	<div class="col-md-8">
		<h1 style="text-align: center; font-size: 30px;">クラス登録リスト</h1>
		<%=label_tag "学期" %><br>
		<%=select_tag :hocki_id, options_from_collection_for_select(Hocki.all,"id","mahocki"), include_blank: "All"%><br>
		<%=label_tag "クラスコ➖ド" %><br>
		<%=text_field_tag :malophoc,nil, placeholder: ""%><br>
		<%=label_tag "学生コ➖ド" %><br>
		<%=text_field_tag :masinhvien,nil, placeholder: ""%><br>
		<div id="dklh_list">
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>クラスコ➖ド</th>
					<th>学生コ➖ド</th>
					<th>科目係数</th>
					<th>中間点</th>
					<th>期末点</th>
					<th>点字</th>
				</tr>
			</thead>
			<tbody>
				<%=render @dklhs %>
			</tbody>
		</table>
		<%= will_paginate @dklhs ,renderer: BootstrapPagination::Rails, :outer_window=>1,:inner_window=>1%><br>
		<%= page_entries_info @dklhs, model: "クラス登録" %>
		</div>
	</div>	
	<div class="col-md-4">
		<h3>From .CSV file </h3>
	  	<%= form_tag import_dangkilophocs_path, multipart: true do %>
	    <%= file_field_tag :file %>
	    <%= submit_tag "Import",class: "btn btn-info" %>
	  	<% end %>
	</div>
</div>
