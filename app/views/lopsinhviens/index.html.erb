<%=provide(:title,"Danh sách lớp sinh viên")%>
<div class="col-md-3">
</div>
<div class="col-md-6">
  <div class="form-horizontal">
    <%= form_tag(lopsinhviens_path, method: "get") do %>
      <div class="form-group">
        <label class="control-label col-sm-4">Khoa viện</label>
        <div class="col-sm-8">
          <%=select_tag "khoavien_id", options_from_collection_for_select(@khoaviens, "id", "tenkhoavien",@selected[:khoavien_id]),:include_blank=>"None",:onchange => "this.form.submit();"%>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-4">Tên lớp sinh viên</label>
        <div class="col-sm-8">
          <%=text_field_tag "tenlopsinhvien",@selected[:tenlopsinhvien]%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <%= submit_tag("Search") %>
        </div>
      </div>
    <% end %>
  </div>
  <%= will_paginate @lopsinhviens , :outer_window=>1,:inner_window=>1%>
  <table class="table table-striped">
  	<thead>
  		<tr>
  			<th>Tên lớp sinh viên</th>
  			<th>Giao viên</th>
  			<th>Khóa học</th>
  			<th>Khoa viện</th>
  		</tr>
  	</thead>
  	<body>
  		<%@lopsinhviens.each do |lsv| %>
  		<tr>
  			<td><%=link_to lsv.tenlopsinhvien,lsv%></td>
  			<td><%=lsv.tengiaovien%></td>
  			<td><%=lsv.khoahoc%></td>
  			<td><%=lsv.tenkhoavien%></td>
  		</tr>
  		<% end %>
  	</body>
  </table>
  <%= will_paginate @lopsinhviens , :outer_window=>1,:inner_window=>1%>
  <%= page_entries_info @lopsinhviens %><br>
  <%= link_to ' Them lop sinh vien ', new_lopsinhvien_path %>
</div>
<div class="col-md-3">

</div>
