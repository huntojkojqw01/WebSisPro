<%=provide(:title,"Bảng điểm cá nhân")%>
<div class="row">
	<div class="col-md-7">		
		<ul class="list-group">
			<li class="list-group-item" style="font-size: 30px;text-align: center;color: red"><b>Thông tin sinh viên</b></li>
			<li class="list-group-item">Mã sinh viên: <b><%=@current_sinhvien.masinhvien%></b></li>
			<li class="list-group-item">Tên sinh viên: <b><%=@current_sinhvien.tensinhvien%></b></li>
			<li class="list-group-item">Ngày sinh: <b><%=@current_sinhvien.ngaysinh%></b></li>
			<li class="list-group-item">Lớp: <b><%=@current_sinhvien.lopsinhvien.tenlopsinhvien%></b></li>
			<li class="list-group-item">Email: <b><%=@current_sinhvien.email%></b></li>
			<li class="list-group-item">Trạng thái: <b><%= @current_sinhvien.trangthai ? "Học" : "Thôi học"%></b></li>
		</ul>		
		<table class="table table-striped table-bordered">
			<thead>
				<tr><th colspan="8" style="font-size: 30px;text-align: center;color: blue">Các lớp đã học</th></tr>
				<tr>
					<th>Mã học kì</th>
					<th>Mã học phần</th>
					<th>Tên học phần</th>
					<th>Tín chỉ</th>
					<th>Mã lớp học</th>
					<th>Điểm quá trình</th>
					<th>Điểm thi</th>
					<th>Điểm chữ</th>
				</tr>
			</thead>
			<tbody>
				<%@lophocs.each do |lh| %>
				<tr>
					<td><%=lh.mahocki%></td>
					<td><%=lh.mahocphan%></td>
					<td><%=lh.tenhocphan%></td>
					<td><%=lh.tinchi%></td>
					<td><%=lh.malophoc%></td>
					<td><%=lh.diemquatrinh%></td>
					<td><%=lh.diemthi%></td>
					<td><%=lh.diemchu%></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<%= will_paginate @lophocs ,renderer: BootstrapPagination::Rails, :outer_window=>1,:inner_window=>1%><br>
		<%= page_entries_info @lophocs , model: "lớp học"%><br>
	</div>
	<div class="col-md-5">		
		<table class="table table-stripped table-bordered">
			<thead>
				<tr><th colspan="9" style="font-size: 30px;text-align: center;color: green">Kết quả đánh giá</th></tr>
				<tr>
					<th></th>					
					<th colspan="4">Kết quả theo kì</th>
					<th colspan="4">Kết quả theo khóa</th>					
				</tr>
				<tr>
					<th>Mã học kì</th>
					<th>TC đăng kí</th>
					<th>TC đạt</th>
					<th>TC nợ</th>
					<th>GPA</th>
					<th>TC đăng kí</th>
					<th>TC đạt</th>
					<th>TC nợ</th>
					<th>CPA</th>
				</tr>
			</thead>
			<tbody>
				<% if @results %>
					<%@results.each do |key,val| %>								
					<tr>
						<td><%=key%></td>
						<td><%=val[:tcdkKI]%></td>
						<td><%=val[:tcqKI]%></td>
						<td><%=val[:tcdkKI]-val[:tcqKI]%></td>
						<td><b><%=val[:gpa]%></b></td>
						<td><%=val[:tcdkKH]%></td>
						<td><%=val[:tcqKH]%></td>
						<td><%=val[:tcdkKH]-val[:tcqKH]%></td>
						<td><b><%=val[:cpa]%></b></td>
					</tr>
					<%end%>					
				<% end %>
			</body>
		</table>
	</div>
</div>
