<%=provide(:title,"スコアボ➖ド")%>
<div class="row">
	<div class="col-md-7">		
		<ul class="list-group">
			<li class="list-group-item" style="font-size: 30px;text-align: center;color: red"><b>学生情報</b></li>
			<li class="list-group-item">学生コ➖ド: <b><%=@current_sinhvien.masinhvien%></b></li>
			<li class="list-group-item">学生名: <b><%=@current_sinhvien.tensinhvien%></b></li>
			<li class="list-group-item">誕生日: <b><%=@current_sinhvien.ngaysinh%></b></li>
			<li class="list-group-item">学生グル➖プ: <b><%=@current_sinhvien.lopsinhvien.tenlopsinhvien%></b></li>
			<li class="list-group-item">メ➖ル: <b><%=@current_sinhvien.email%></b></li>
			<li class="list-group-item">調子: <b><%= @current_sinhvien.trangthai ? "勉強している" : "辞めました"%></b></li>
		</ul>		
		<table class="table table-striped table-bordered">
			<thead>
				<tr><th colspan="8" style="font-size: 30px;text-align: center;color: blue">参加したクラス</th></tr>
				<tr>
					<th>学期コ➖ド</th>
					<th>科目コ➖ド</th>
					<th>科目名</th>
					<th>単位</th>
					<th>クラスコ➖ド</th>
					<th>中間点</th>
					<th>期末点</th>
					<th>点字</th>
				</tr>
			</thead>
			<tbody>
				<%@lophocs.each do |lh| %>
				<tr>
					<td><%=lh.mahocki%></td>
					<td><%=lh.mahocphan%></td>
					<td><%=lh.tenhocphan%></td>
					<td><%=lh.tinchi%></td>
					<td><%=lh.malophoc%></td>
					<td><%=lh.diemquatrinh%></td>
					<td><%=lh.diemthi%></td>
					<td><%=lh.diemchu%></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<%= will_paginate @lophocs ,renderer: BootstrapPagination::Rails, :outer_window=>1,:inner_window=>1%><br>
		<%= page_entries_info @lophocs , model: "クラス"%><br>
	</div>
	<div class="col-md-5">		
		<table class="table table-stripped table-bordered">
			<thead>
				<tr><th colspan="9" style="font-size: 30px;text-align: center;color: green">成績</th></tr>
				<tr>
					<th></th>					
					<th colspan="4">学期による</th>
					<th colspan="4">コ➖スによる</th>					
				</tr>
				<tr>
					<th>学期コ➖ド</th>
					<th>登録した単位</th>
					<th>合格単位</th>
					<th>失敗した単位</th>
					<th>GPA</th>
					<th>登録した単位</th>
					<th>合格単位</th>
					<th>失敗した単位</th>
					<th>CPA</th>
				</tr>
			</thead>
			<tbody>
				<% if @results %>
					<%@results.each do |key,val| %>								
					<tr>
						<td><%=key%></td>
						<td><%=val[:tcdkKI]%></td>
						<td><%=val[:tcqKI]%></td>
						<td><%=val[:tcdkKI]-val[:tcqKI]%></td>
						<td><b><%=val[:gpa]%></b></td>
						<td><%=val[:tcdkKH]%></td>
						<td><%=val[:tcqKH]%></td>
						<td><%=val[:tcdkKH]-val[:tcqKH]%></td>
						<td><b><%=val[:cpa]%></b></td>
					</tr>
					<%end%>					
				<% end %>
			</body>
		</table>
	</div>
</div>
