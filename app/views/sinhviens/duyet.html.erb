<%=provide(:title,"スケ➖ジュ➖ル検索")%>
<div class="row">	
		<%= form_tag duyet_sinhviens_path do %>
		<div class="col-md-4 col-md-offset-2">		
				<h3 style="color:blue;">Chọn 科目:</h3>
				<%= select_tag(:list,
				options_for_select(Hocphan.all.collect{ |u| [u.mahocphan+"--"+u.tenhocphan, u.id] }),
				multiple: true, style: "height: 300px;"
				)%><br>
				<%=submit_tag "スマート", class: "btn btn-large btn-success" %>
		</div>			
		<div class="col-md-4 ">
			<h3 style="color:red;">忙しいタイム:</h3>
				<h4 id="busy"><%=render 'busy'%></h4>		
		</div>			
		<% end %>	
</div>
<div class="row">	
	<div class="col-md-6 col-md-offset-3">
		<%if @mons.any? %>
		<h1>選んだ科目</h1>
		<h4><%=render 'table', hps: @mons%></h4>
		<h3>
			スケ➖ジュ➖ル数:
			<%=@mang_ket_qua.count%>
		</h3>
		<% @mang_ket_qua.each do |ds| %>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
			<% ds.each do |lop|%>
				<%=lop.hocphan.mahocphan%>-<%=lop.malophoc%>	
			<%end%>					
				<%=render 'tkb', object: to_tkb(ds) %>
			</div>
		</div>
		<%end%>
	<%end%>
	</div>	
</div>

