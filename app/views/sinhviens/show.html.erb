<%=provide(:title,"学生情報")%>
<div class="row">	
	<div class="col-md-4 col-md-offset-4" style="background-color:#F6D8CE; font-size:20px;">
		<ul class="list-group">
			<li class="list-group-item"><b>学生コ➖ド: </b><%=@sinhvien.masinhvien%></li>
			<li class="list-group-item"><b>学生名: </b><%=@sinhvien.tensinhvien%></li>
			<li class="list-group-item"><b>誕生日: </b><%=@sinhvien.ngaysinh%></li>
			<li class="list-group-item"><b>学生グル➖プ: </b><%=@sinhvien.tenlopsinhvien%></li>
			<li class="list-group-item"><b>メ➖ル: </b><%=@sinhvien.email%></li>
			<li class="list-group-item"><b>調子: </b><%= @sinhvien.trangthai ? "勉強している" : "辞めました"%></li>
		</ul>		
		<% if admin? %>
			<%=link_to '',edit_sinhvien_path(@sinhvien),class: "btn btn-warning glyphicon glyphicon-edit"%>
			<%= link_to '', @sinhvien, method: :delete,data: { confirm: '削除' },class: "btn btn-danger glyphicon glyphicon-trash" %>
		<%end%>
	</div>	
</div>
