<%=provide(:title,"Thêm sinhvien ")%>
<div class="row">
	<div class="col-md-9">
		<h1>Thêm sinhvien mới </h1>
		<%= form_for(@sinhvien) do |f| %>
		    <%= render 'shared/error_messages', object: f.object %>
		    <%= f.label :"Tên" %>
		    <%= f.text_field :tensinhvien ,class: 'form-control', placeholder: "Nhập tên sinhvien "%>
		    <%= f.label :"ma sinh vien " %>
		    <%= f.text_field :masinhvien ,class: 'form-control', placeholder: "Nhập ma sinh vien "%>
		    <%= f.label :"Ngày sinh " %>
		    <%= f.text_field :ngaysinh ,class: 'form-control', placeholder: "Ngày/Tháng/Năm"%>
		    <%= f.label :"Địa chỉ" %>
		    <%= f.text_field :email ,class: 'form-control', placeholder: "Email "%>		    
		    <%= f.label :"Lop sinhvien" %>
		    <%= f.collection_select :lopsinhvien_id, Lopsinhvien.all, :id, :tenlopsinhvien, prompt: true %>
		    <%= f.submit "Thêm ",class: "btn btn-primary"%>
		<% end %>
	</div>
	<div class="col-md-3">
		<h3>Nhập từ file CSV </h3>
	  	<%= form_tag import_sinhviens_path, multipart: true do %>	  	
	    <%= file_field_tag :file %>
	    <%= submit_tag "Nạp",class: "btn btn-info" %>
	  	<% end %>	  	
	</div>
</div>
