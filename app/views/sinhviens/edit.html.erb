<%=provide(:title,"Edit sinh vien ")%>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Thay đổi thông tin sinh vien </h1>
		<%= form_for(@sinhvien) do |f| %>
		    <%= render 'shared/error_messages', object: f.object %>
		    <%= f.label :"Tên" %>
		    <%= f.text_field :tensinhvien ,class: 'form-control', placeholder: "Nhập tên sinhvien "%>
		    <%= f.label :"Ma sinh vien " %>
		    <%= f.text_field :masinhvien ,class: 'form-control', placeholder: "Nhập ma sinh vien "%>
		    <%= f.label :"Ngày sinh " %>
		    <%= f.text_field :ngaysinh ,class: 'form-control', placeholder: "Ngày/Tháng/Năm"%>
		    <%= f.label :"Địa chỉ" %>
		    <%= f.text_field :email ,class: 'form-control', placeholder: "Email "%>
		    <%= f.label :"Trang thai" %>
		    <%= f.collection_radio_buttons :trangthai, [[true,"Hoc"],[false,"Thoi hoc"]], :first, :last %>
		    <%= f.label :"Lop sinhvien" %>
		    <%= f.collection_select :lopsinhvien_id, Lopsinhvien.all, :id, :tenlopsinhvien, prompt: true %>
		    <%= f.submit "Thay đổi ",class: "btn btn-primary"%>
		<% end %>
	</div>
</div>
