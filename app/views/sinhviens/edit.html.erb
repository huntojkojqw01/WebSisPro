<%=provide(:title,"Sửa thông tin sinh viên ")%>
<div class="row">
	<div class="col-md-6 col-md-offset-3" style="background-color:#F2F5A9">
		<h1 style="text-align: center; font-size: 40px;">Thay đổi thông tin sinh viên </h1>
		<div class="form-horizontal", style="margin-top: 20px;">
			<%= form_for(@sinhvien) do |f| %>
			    <%= render 'shared/error_messages', object: f.object %>
					<div class="form-group">
						<%= f.label :"Tên sinh viên" ,class:"control-label col-sm-4"%>
						<div class="col-sm-8">
							<%= f.text_field :tensinhvien ,class: 'form-control', placeholder: "Nhập tên sinhvien "%>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :"Mã sinh viên " ,class:"control-label col-sm-4"%>
						<div class="col-sm-8">
							<%= f.text_field :masinhvien ,class: 'form-control', placeholder: "Nhập ma sinh vien ",readonly: true%>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :"Ngày sinh " ,class:"control-label col-sm-4"%>
						<div class="col-sm-8">
							<%= f.date_select :ngaysinh ,:start_year=>1980,:end_year=>2000%>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :"Email" ,class:"control-label col-sm-4"%>
						<div class="col-sm-8">
							<%= f.text_field :email ,class: 'form-control', placeholder: "Email "%>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :"Trạng thái" ,class:"control-label col-sm-4"%>
						<div class="col-sm-8">
							<%= f.collection_radio_buttons :trangthai, [[true,"học"],[false,"thôi học"]], :first, :last %>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :"Lớp sinh viên" ,class:"control-label col-sm-4"%>
						<div class="col-sm-8">
							<%= f.collection_select :lopsinhvien_id, Lopsinhvien.all, :id, :tenlopsinhvien, prompt: true %>
						</div>
					</div>
					<div class="form-group">
			      <div class="col-sm-offset-4 col-sm-8">
			        <%= f.submit "Thay đổi ",class: "btn btn-primary"%>
			      </div>
	    		</div>
			<% end %>
		</div>
	</div>
</div>
